<% unless current_page.data.hide_bio %>
<div class="bio row">
  <% if current_page.data.stack_bio %>
  <div class="bio__summary
            col-sm-8 col-sm-offset-2
            col-md-6 col-md-offset-3
            col-lg-6 col-lg-offset-3">
  <% else  %>
  <div class="bio__summary
              col-xs-12">
  <% end %>

    <div class="row">
      <% if current_page.data.stack_bio %>
      <div class="col-xs-12">
      <% else %>
      <div class="col-xs-12 col-md-4 col-md-offset-2">
      <% end %>
        <span class='bio__avatar'></span>
      </div>

      <% if current_page.data.stack_bio %>
      <div class="col-xs-12">
      <% else %>
      <div class="col-md-12 col-md-4">
      <% end %>
        <h1 class="bio__name">
          Cristiano Betta
        </h1>

        <%= partial 'partials/navigation_links' if root? %>

        <p>
          Full Stack Developer, Developer Advocate, ex-PayPal,
          event organiser at <a href="http://geeksoflondon.com">
          Geeks of London</a>. Owner of some crazy cats. Obsessed with
          <a href='http://missgeeky.com'>@mseckington</a>.
        </p>

        <p>
          Loves to code in Ruby, Rails &amp; JS. Appreciates web standards,
          continuous integration, distributed version control systems, test driven development, and coffee.
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
