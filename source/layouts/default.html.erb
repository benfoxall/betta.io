<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title><%= current_article.title + ' - ' unless current_article.nil? %> Cristiano Betta</title>
<link href='https://fonts.googleapis.com/css?family=Cutive+Mono|Open+Sans:400,400italic,300,600,600italic,700,700italic' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
    <%= feed_tag :atom, "/atom.xml", title: "Atom Feed" %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  </head>
  <body class="<%= page_classes %>">
    <div class="container">
      <%= partial "partials/navigation" %>
      <%= yield %>
      <%= partial "partials/bio" %>
    </div>
  </body>
</html>
